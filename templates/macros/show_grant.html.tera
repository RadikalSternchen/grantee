{% macro render_history(activities) %} 
    {% for a in activities %}
        <li>
            <span class="date">
                {{a.when | date(format="%d.%m.%Y")}}
            </span>
                {{self::status_icon(state=a.from)}} â© {{self::status_icon(state=a.to)}} {{a.by}}
                {% if a.comment %}
                    <blockquote>{{a.comment}}</blockquote>
                {% endif %}
        </li>
    {% endfor %}
{% endmacro %}


